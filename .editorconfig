root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.{js,jsx,vue,blade.php}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{json,json5,jsonc}]
indent_size = 2

[composer.json]
indent_size = 4

[package.json]
indent_size = 4
